<div 
    x-data="{ sessionKey: '' }" 
    x-show="open" 
    @click.away="this.open = false"
    id="sessionModal" 
    class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50"
>
  <div class="bg-white w-full m-6 p-6 rounded-lg shadow-lg">
    <h2 class="text-xl font-semibold">
        Enter Session Key
    </h2>
    <div class="mt-3">
      <input 
        type="text" 
        x-model="sessionKey"
        class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
    </div>
    <div class="flex justify-end mt-6 gap-3">
      <button class="bg-red-500 text-white px-4 py-2 rounded" @click="open=false">
        Close
      </button>
      <form :action="page" method="get">
        <input type="hidden" name="session_key" :value="sessionKey">
        <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded" :disabled="sessionKey.length != 6">
            Submit
        </button>
      </form>
      
    </div>
  </div>
</div>