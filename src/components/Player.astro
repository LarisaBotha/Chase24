<div class="w-full h-1/6 bg-[#c671a8] rounded-xl flex justify-start items-center shadow-lg
            px-6 sm:px-7 md:px-8 lg:px-9 xl:px-10
            py-3 sm:py-4 md:py-5 lg:py-6 xl:py-7
            gap-3 sm:gap-4 md:gap-5 lg:gap-6 xl:gap-7">
    <!-- Rank -->
    <div 
        class="text-white font-bold font-['Joti One']
               text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl"
        x-text="4 + index"
    />

    <!-- Avatar Placeholder -->
    <div 
        class="w-1/5 rounded-full border border-white flex-shrink-0" 
        style="height: auto; aspect-ratio: 1/1;"
    >
        <img
            :src="player.avatar"
            alt="Avatar"
            class="w-full rounded-full"
            style="aspect-ratio: 1/1;"
        />
    </div>
    
    <!-- Player Container -->
    <div class="flex flex-col justify-center items-start 
                gap-0.5 sm:gap-1.5 md:gap-2.5 lg:gap-3.5 xl:gap-4.5
                px-5 sm:px-6 md:px-7 lg:px-8 xl:px-9">
        <!-- Player Name -->
        <div 
            class="text-[#451c3a] font-semibold font-['Inter']
                   text-xl sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl"
            x-text="player.name"
        />
       <!-- Player Score -->
       <div class="text-[#451c3a] font-normal font-['Inter']
            text-md sm:text-lg md:text-xl lg:text-2xl xl:text-3xl"
            x-text="player.total_score + ' pts'"
        />
    </div>

</div>
