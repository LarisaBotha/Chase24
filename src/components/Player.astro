---
<div 
    x-data="{
        get TimeString() {
            const hours = Math.floor(this.player.total_time_seconds / 3600);
            const minutes = Math.floor((this.player.total_time_seconds % 3600) / 60);
            const seconds = (this.player.total_time_seconds % 60).toFixed(0);
            return `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`
        }
    }"
    class="w-full bg-[#c671a8] rounded-xl grid grid-cols-7 items-center shadow-lg overflow-hidden
            px-4 sm:px-5 md:px-6 lg:px-7 xl:px-8
            py-1 sm:py-2 md:py-3 lg:py-4 xl:py-5"
>
    <!-- Rank -->
    <div 
        class="col-span-1 text-white font-bold font-['Joti One'] flex justify-center items-center
               text-4xl sm:text-5xl md:text-6xl lg:text-7xl xl:text-8xl"
        x-text="4 + index"
    ></div>

    <!-- Avatar Placeholder -->
    <div class="col-span-2 p-3 w-full">
        <div 
            class="w-full rounded-full border border-white p-0.5 flex justify-center items-center"
            style="aspect-ratio: 1/1;"
        >
            <img
                :src="player.avatar"
                alt="Avatar"
                class="w-full rounded-full"
                style="aspect-ratio: 1/1;"
            />
        </div>
    </div>
    
    <!-- Player Container -->
    <div 
        class="col-span-4 flex flex-col justify-center items-start 
                gap-0.5 sm:gap-1.5 md:gap-2.5 lg:gap-3.5 xl:gap-4.5
                px-4 sm:px-5 md:px-6 lg:px-7 xl:px-8"
    >
        <!-- Player Name -->
        <div 
            class="text-[#451c3a] font-semibold font-['Inter']
                text-xl sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl"
            x-text="player.name"
        ></div>

        <div class="flex flex-row gap-2">
            <!-- Player Score -->
            <div class="text-[#451c3a] font-normal font-['Inter'] whitespace-nowrap
                text-md sm:text-lg md:text-xl lg:text-2xl xl:text-3xl"
                x-text="player.total_score + ' pts'"
            ></div>

            <!-- Line -->
            <div 
                x-show="player.total_time_seconds > 0"
                class="w-[1.7px] h-auto my-1 bg-[#451c3a]"
            ></div>

            <!-- Time -->
            <div 
                x-show="player.total_time_seconds > 0"
                class="text-[#451c3a] font-normal font-['Inter']
                text-md sm:text-lg md:text-xl lg:text-2xl xl:text-3xl"
                x-text="TimeString"
            ></div>
        </div>
    </div>
</div>
